<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
              android:id="@+id/alarms_dummy_view"
              style="@style/no_alarms"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:contentDescription="@string/no_alarms"
              android:paddingBottom="88dp"
              android:text="Put content here"
              android:gravity="center_horizontal"
              android:textColor="#4effffff"
              android:visibility="gone" />

    <FrameLayout
        android:id="@+id/items_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/items_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="beforeDescendants"
            android:fadingEdgeLength="0dp"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical" />

    </FrameLayout>

    <include layout="@layout/one_empty_view" />

</FrameLayout>
