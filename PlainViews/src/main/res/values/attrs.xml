<resources>

    <declare-styleable name="CircleView">
        <!-- Sets the center/radius of the circle relative to the view's bounds. -->
        <attr name="android:gravity" />
        <!-- The ARGB fill color of the circle. -->
        <attr name="fillColor" format="color" />
        <!-- The center x-coordinate of the circle. -->
        <attr name="centerX" format="dimension" />
        <!-- The center y-coordinate of the circle. -->
        <attr name="centerY" format="dimension" />
        <!-- The radius of the circle. -->
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BottomBarDragLayout">
        <!-- Indicates if bottom bar should be automatically dismissed after some delay -->
        <attr name="autoDismiss" format="boolean" />
        <!-- Sets a delay after which bottom bar will be dismissed. -->
        <attr name="dismissAfter" format="integer" />
        <!-- Sets a velocity threshold which triggers auto expand/collapse-->
        <attr name="expandVelocity" format="integer" />
        <!-- An id of a bottom bar view -->
        <attr name="bottomBarId" format="reference" />
        <!-- Height of a visible part of a bottom bar -->
        <attr name="bottomBarHeight" format="dimension" />
    </declare-styleable>

</resources>
